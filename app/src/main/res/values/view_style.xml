<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ItemPaddingOutside">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>


    <style name="ItemMarginInside">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="ItemIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">false</item>
        <!--<item name="android:alpha">0.54</item>-->
    </style>




    <style name="ItemMultyLine">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ItemMultyLine.Medium18sp">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
</resources>
